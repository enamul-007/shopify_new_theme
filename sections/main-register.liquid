<div class="customer_register_section">
  <div class="container">
    <div class="row justify-content-center">
      <div class="col-md-5">
        <div class="register_form p-4 shadow rounded bg-white">
             <h2 class="mb-4 text-center">Create an Account</h2>
          {% form 'create_customer' %}
            {% if form.errors %}
              <div class="alert alert-danger">
                {{ form.errors | default_errors }}
              </div>
            {% endif %}

            <div class="form-row row">
              <div class="col-md-6 mb-3">
                <input type="text" name="customer[first_name]" id="FirstName"
                  class="form-control" placeholder="First Name" required>
              </div>
              <div class="col-md-6 mb-3">
                <input type="text" name="customer[last_name]" id="LastName"
                  class="form-control" placeholder="Last Name" required>
              </div>
            </div>

            <div class="mb-3">
              <input type="email" name="customer[email]" id="Email"
                class="form-control" placeholder="Email" required>
            </div>

            <div class="mb-3">
              <input type="password" name="customer[password]" id="CreatePassword"
                class="form-control" placeholder="Password" required>
            </div>

            <button type="submit" class="btn btn-primary w-100">Register</button>
          {% endform %}

          <div class="mt-3 text-center">
            <a href="{{ routes.account_login_url }}">Already have an account? Login</a>
          </div>

        </div>
      </div>
    </div>
  </div>
</div>
