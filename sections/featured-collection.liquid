<div class="featured-collection-section">
  <div class="container">
    <div class="section_header">
      <h1 class="heading">
        {{section.settings.heading}}
      </h1>
      {% if section.settings.sub_heading != blank %}
        <p class="seub_heading">
        {{section.settings.sub_heading}}
      </p>
      {% endif %}
      
    </div>
    <div class="row">
      <div class="col-md-3">
        <div class="card">
          <div class="card-body"> product card </div>
        </div>
      </div>
    </div>
  </div>
</div>


{% schema %}
{
    "name": "Featured collection",
    "settings": [
        {
            "type": "text",
            "id": "heading",
            "label": "Heading",
            "default": "Featured collection"
        },
        {
            "type": "richtext",
            "id": "sub_heading",
            "label": "Sub Heading",

        },
        {
            "type": "collection",
            "id": "collection",
            "label": "Select Collection"
        }
        ],
        "presets": [
            {
                "name": "Featured Collection",
                "category": "collection"
            }
        ]
}
{% endschema %}