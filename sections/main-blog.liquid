<div class="blog-section">
    <div class="container">
        <div class="blog_title">
            <h2>{{ blog.title }}</h2>
        </div>
        <div class="row">
            {% for blog  in blog.articles %}
                <div class="col-md-4">
                    <div class="card-body">
                    {% if article.image != blank %}
                        {{ article.image |  image_url: width: 350 |  image_tag }}
                    {% endif %}
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
</div>