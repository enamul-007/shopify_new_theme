<div class="blog-section">
    <div class="container">
        <div class="blog_title">
            <h2>{{ blog.title }}</h2>
        </div>
        <div class="row">
            {% for article in blog.articles %}
            <div class="col-md-4">
                <div class="article_card d-flex">
                    <div class="square">
                        {% if article.image != blank %}
                        <img src="{{ article.image | image_url: width: 400, height: 300 }}"
                            class="mask img-fluid w-100 rounded" alt="{{ article.image.alt | escape }}" width="400"
                            height="300">
                        {% else %}
                        <div class="mask img-fluid w-100 rounded d-flex align-items-center justify-content-center"
                            style="width:400px; height:300px; background:#f8f8f8;">
                            {{ 'product-apparel-1' | placeholder_svg_tag }}
                        </div>
                        {% endif %}

                        <div class="d-flex justify-content-between px-4">
                            {% if section.settings.show_date %}
                            <p class="col-6 article-date article_text">{{ article.published_at | time_tag: format:'date'
                                }}</p>
                            {% endif %}
                            {% if section.settings.show_author %}
                            <p class="col-6 article_text">{{ article.author }}</p>
                            {% endif %}
                        </div>

                        <h4 class="px-4 article_title">
                            {{ article.title | strip_html | truncate: 30 }}
                        </h4>

                        <div class="rte px-4 pt-2">
                            {% if section.settings.show_excerpt %}
                            {% if article.excerpt.size > 0 or article.content.size > 0 %}
                            {% if article.excerpt.size > 0 %}
                            <p class="article_text">{{ article.excerpt | strip_html | truncatewords: 20 }}</p>
                            {% else %}
                            <p class="article_text">{{ article.content | strip_html | truncatewords: 20 }}</p>
                            {% endif %}
                            {% endif %}
                            {% endif %}
                        </div>

                        <div>
                            <a href="{{ article.url }}" target="_blank" class="button">Read More</a>
                        </div>
                    </div>
                </div>
            </div>

            {% endfor %}
        </div>
    </div>
</div>



{% schema %}
{
"name": "Blog template",
"settings": [
{
"type": "checkbox",
"id": "show_author",
"label": "Show Author",
"default": true
},
{
"type": "checkbox",
"id": "show_date",
"label": "Show Date",
"default": true
},
{
"type": "checkbox",
"id": "show_excerpt",
"label": "Show Excerpt",
"default": true
}
]
}
{% endschema %}