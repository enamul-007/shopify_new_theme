{% liquid
if section.settings.column == '2'
assign col = 'col-md-6'
elsif section.settings.column == '3'
assign col = 'col-md-4'
elsif section.settings.column == '4'
assign col = 'col-md-3'
elsif section.settings.column == '6'
assign col = 'col-md-2'
else
assign col = 'col'
endif
%}
<div class="footer-section">
    {% if section.blocks.size > 0 %}
    <div class="footer-main pt-5 pb-3">
        <div class="container">
            <div class="row">
                {% for block in section.blocks %}
                <div class="{{- col -}}">
                    {% case block.type %}
                    {% when 'brand_info' %}
                    <div class="brand_info">
                        {% if block.settings.image != blank %}
                        <div class="footer-logo mb-3">
                            <a href="{{ routes.root_url }}">
                                <img src="{{ block.settings.image | image_url: width: 200 }}" alt="{{ shop.name }}"
                                    width="{{ block.settings.image.width }}" height="{{ block.settings.image.height }}">
                            </a>
                        </div>
                        {% else %}
                        <h3 class="footer-logo mb-3">
                            <a href="{{ routes.root_url }}" class="text-decoration-none text-dark">
                                {{ shop.name }}
                            </a>
                        </h3>
                        {% endif %}

                        {% if block.settings.rte != blank %}
                        <div class="brand-text">
                            {{ block.settings.rte }}
                        </div>
                        {% endif %}
                    </div>

                    {% when 'menu' %}
                    <div class="footer_links">
                        <div class="link_heading mb-3">
                            <h4>{{ block.settings.title }}</h4>
                        </div>
                        <div class="link_lists">
                            {% assign links = block.settings.footer_menu.links %}
                            <ul class="list-unstyled ">
                                {% for link in links %}
                                <li><a class="" href="{{ link.url }}">{{ link.title }}</a></li>
                                {% else %}
                                {% for i in (1..4) %}
                                <li>
                                    <a href="#">Sample Link {{ forloop.index }}</a>
                                </li>
                                {% endfor %}
                                {% endfor %}
                            </ul>
                        </div>
                    </div>
                    {% when 'info' %}
                    <div class="footer_info">
                        <div class="link_heading">
                            <h4>{{ block.settings.title }}</h4>
                        </div>
                        {% if block.settings.payment_methods %}
                        <div class="payment_method">
                            <img src="{{ block.settings.payment_methods | image_url: width: 300 }}"
                                alt="Payment Methods" width="{{ block.settings.payment_methods.width }}"
                                height="{{ block.settings.payment_methods.height }}">
                        </div>
                        {% endif %}
                    </div>
                    {% endcase %}
                </div>
                {% endfor %}
            </div>
        </div>
    </div>
    {% endif %}
    <div class="footer-copyright py-3">
        <div class="container">
            <div class="row">
                <div class="col-12 text-center">
                    <div class="copyright-text">
                        {% if section.settings.copyright != blank %}
                        {{ section.settings.copyright }}
                        {% else %}
                        &copy; {{ shop.name }} | All rights reserved!
                        {% endif %}
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

{% schema %}

{
"name": "Footer menu",
"settings": [
{
"type": "select",
"id": "column",
"label": "Column per row",
"options": [
{
"label": "2 column",
"value": "2"
},
{
"label": "3 column",
"value": "3"
},
{
"label": "4 column",
"value": "4"
},
{
"label": "6 column",
"value": "6"
}
],
"default": "3"
},
{
"type": "liquid",
"id": "copyright",
"label": "Copyright Text",
"default": "&copy; {{ shop.name }} | All rights reserved!"
}
],
"blocks": [
{
"type": "brand_info",
"name": "Brand info",
"settings": [
{
"type": "image_picker",
"id": "image",
"label": "Image/Logo"
},
{
"type": "richtext",
"id": "rte",
"label": "Text",
"default": "<p>A details about your brand!</p>"
}
]
},
{
"type": "menu",
"name": "Menu",
"settings": [
{
"type": "text",
"id": "title",
"label": "Menu Heading",
"default": "Footer Menu"
},
{
"type": "link_list",
"id": "footer_menu",
"label": "Footer Menu"
}
]
},
{
"type": "info",
"name": "Info",
"settings": [
{
"type": "text",
"id": "title",
"label": "Menu Heading",
"default": "Footer Menu"
},
{
"type": "html",
"id": "html",
"label": "Text",
"default": "You can write your text here. This field also support html"
},
{
"type": "image_picker",
"id": "payment_methods",
"label": "Payment Method icons"
}
]
}
]
}

{% endschema %}