<div class="offcanvas offcanvas-end" tabindex="-1" id="offcanvasRight" aria-labelledby="offcanvasRightLabel">
  <div class="offcanvas-header">
    <h5 id="offcanvasRightLabel" id="cart_drawer_count">Cart Item &bull;{{cart.item_count}}</h5>
    <button type="button" class="btn-close text-reset" data-bs-dismiss="offcanvas" aria-label="Close"></button>
  </div>
  <div class="offcanvas-body">
    <div class="card_info">
      <table class="table">
        {% for item in cart.items %}
        <tr class="item">
          <td class="product-image">
            <img src="{{ item.image | img_url: 'small' }}" alt="{{ item.product.title }}">
          </td>
          <td class="item-info">
            <h6 class="item-title">{{item.product.title}}</h6>
            {% unless item.product.has_only_default_variant %}
            {% for option in item.options_with_values %}
            <span class="item_option">{{ option.value }}</span>
            {% unless forloop.last %}
            /
            {% endunless %}
            {% endfor %}
            {% endunless %}
            <div class="quantity mt-2 ">
              <label>Quantity</label>
              <input type="number" name="quantity" value="{{ item.quantity }}" class="w-25">
            </div>
          </td>
          <td class="item-action">
            <a href="#" data-line="{{forloop.index}}" >{% render 'icon', icons:'delete' %}</a>
            <p class="item_price w-50">{{item.line_price | money}}</p>
          </td>
        </tr>
        {% endfor %}
      </table>
    </div>
  </div>
</div>