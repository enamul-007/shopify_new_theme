<div class="image-banner-{{section.id}}">
  <div class="image-banner-main">
    {% assign image_width = section.settings.image.width | divided_by: section.settings.image.aspect_ratio %}
    {% if section.settings.image != blank %}
      {{ section.settings.image  | image_url: width: 1440  | image_tag:  widths: '375, 550, 768, 992, 1200, 1440, 1920',  alt: section.settings.heading,  class: "banner-img"
      }}
    {% else %}
      {{ 'hero-apparel-1' | placeholder_svg_tag: 'placeholder-svg' }}
    {% endif %}
    
    <div class="container banner_main ">
      <div class="banner_container">
        <div class="banner_content">
          <h1>{{ section.settings.heading }}</h1>
          {% if section.settings.sub-heading != blank %}
            <p>{{ section.settings.sub-heading }}</p>
          {% endif %}
          <div class="cta-action">
            <a href="{{section.settings.url_1}}" class="btn btn-primary">{{ section.settings.lable_1 }}</a>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
{% schema %}
  {
    "name": "Image Banner",
    "settings": [
      {
        "type": "image_picker",
        "id": "image",
        "label": "Image"
      },
      {
        "type": "header",
        "content": "banner content"
      },
      {
        "type": "text",
        "id": "heading",
        "label": "Heading",
        "default": "Our Best Collection"
      },
      {
        "type": "richtext",
        "id": "sub-heading",
        "label": "Sub Heading"
      }, {
        "type": "text",
        "id": "lable_1",
        "label": "Button Lable",
        "default": "Buy Now"
      }, {
        "type": "url",
        "id": "url_1",
        "label": "Button URL"
      }, {
        "type": "range",
        "id": "content_width",
        "label": "Content Width",
        "min": 50,
        "max": 100,
        "step": 1,
        "unit": "%",
        "default": 60
      }

    ]
  }
{% endschema %}


{% style %}
  .banner_content {
    max-width: {{ section.settings.content_width }}%;
  }
  @media(max-width: 600px) {
    .banner_content {
      width: 100%;
    }
  }
{% endstyle %}