{% style %}
    .banner_content{
        max-width:{{section.settings.content_width}}%;
    }
{% endstyle %}


<div class="image-banner-{{section.id}}">
  <div class="image-banner-main">
    {% if section.settings.image != blank %}
      <img
        src="{{ section.settings.image |  img_url: 'original' }}"
        width="100%"
        height="400"
        alt="">
    {% else %}
      {{ 'hero-apparel-1' | placeholder_svg_tag: 'placeholder-svg' }}
    {% endif %}
    <div class="container banner_container">
      <div class="banner_content">
        <h1>{{ section.settings.heading }}</h1>
        {% if section.settings.sub-heading != blank %}
          <p>{{ section.settings.sub-heading }}</p>
        {% endif %}
        <div class="cta-action">
          <a href="{{section.settings.url_1}}" class="btn btn-primary">{{ section.settings.lable_1 }}</a>
        </div>
      </div>
    </div>

  </div>
</div>
{% schema %}
  {
    "name": "Image Banner",
    "settings": [
      {
        "type": "image_picker",
        "id": "image",
        "label": "Image"
      },
      {
        "type": "header",
        "content": "banner content"
      },
      {
        "type": "text",
        "id": "heading",
        "label": "Heading",
        "default": "Our Best Collection"
      },
      {
        "type": "richtext",
        "id": "sub-heading",
        "label": "Sub Heading"
      }, {
        "type": "text",
        "id": "lable_1",
        "label": "Button Lable",
        "default": "Buy Now"
      }, {
        "type": "url",
        "id": "url_1",
        "label": "Button URL"
      },
      {
        "type": "range",
        "id": "content_width",
        "label": "Content Width",
        "min": 50,
        "max": 100,
        "step": 1,
        "unit": "%",
        "default":60
      }

    ]
  }
{% endschema %}