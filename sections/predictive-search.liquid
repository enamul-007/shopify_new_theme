<div id="predictiveSearchSection">
    {% if predictive_search.performed %}
    <div id="predictive_search_result">
        {% if predictive_search.resources.products.size > 0%}
        <h3 id="predictive_search_result">Products</h3>
        <ul class="list-inline">
            {% for product in predictive_search.resources.products %}
            <li class="lis-item my-2">
                <a href="{{ product.url }}">
                    {{ product | image_url: width: 50 | image_tag }}
                    <span class="mx-2">{{ product.title }}</span>
                </a>
            </li>
            {% endfor %}
        </ul>
        {% else %}
        <p>No Result Found!</p>
        {% endif %}
        {% if predictive_search.resources.articles.size > 0 or predictive_search.resources.pages.size > 0 %}
        <h3 id="redictive-search-result">Pages & Article</h3>
        <ul class="list-inline">
            {% for product in predictive_search.resources.pages %}
            <li class="lis-item my-2">
                <a href="{{ pages.url }}">
                    {{ product | image_url: width: 50 | image_tag }}
                    <span class="mx-2">{{ pages.title }}</span>
                </a>
            </li>
            {% endfor %}

            {% for product in predictive_search.resources.articles %}
            <li class="lis-item my-2">
                <a href="{{ articles.url }}">
                    {{ product | image_url: width: 50 | image_tag }}
                    <span class="mx-2">{{ articles.title }}</span>
                </a>
            </li>
            {% endfor %}
        </ul>
        {% endif %}
        <hr>
        <button class="btn btn-secondary btn-sm">
            Search For {{ predictive_search.terms }}
        </button>
    </div>
    {% endif %}
</div>