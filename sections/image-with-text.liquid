<div class="image_with_text_section">
    <div class="container">
        <div class="row">
            <div class="col-md-6">
                <div class="image_with_text_image py-4">
                    {% if section.settings.image != blank %}
                    <img src="{{ section.settings.image | image_url: width: 600, height: 600 }}"
                        alt="{{ section.settings.image.alt | escape }}"
                        style="width:100%; height:600px; object-fit:cover;" width="600" height="600">
                    {% else %}
                    {{ 'collection-apparel-1' | placeholder_svg_tag: 'placeholder-svg' }}
                    {% endif %}
                </div>
            </div>
            <div class="col-md-6">
                <div class="image_with_text_content">
                    <h2>{{ section.settings.heading }}</h2>
                    {% if section.settings.sub_heading != blank %}
                    <p>{{ section.settings.sub_heading }}</p>
                    {% endif %}
                    <div class="image_with_text_CTA">
                        <div class="cta-action">
                            <a href="{{ section.settings.url_1 }}" class="btn btn-primary">{{ section.settings.label_1
                                }}</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

{% schema %}

{
"name": "Image with text",
"settings": [
{
"type":"image_picker",
"id":"image",
"label":"Image"
}

],
"presets": [
{
"name": "Image with text"
}
]
}

{% endschema %}