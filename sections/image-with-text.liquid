
<div class="image_with_text-{{section.id}}">
  <div class="container">
    <div class="row align-items-center">
      <div class="col-md-6">
        {% if section.settings.image != blank %}
        <img src="{{ section.settings.image | image_url: width: 600, height: 600 }}"
          alt="{{ section.settings.image.alt | escape }}" class="img-fluid"
          style="width:100%; height:600px; object-fit:cover;" width="600" height="600">
        {% else %}
        {{ 'collection-apparel-1' | placeholder_svg_tag: 'placeholder-svg' }}
        {% endif %}
      </div>
      <div class="col-md-6">
        <div class="image-with-text-content">
          <h2>{{ section.settings.heading }}</h2>
          {% if section.settings.sub_heading != blank %}
          <div class="sub-headimg">
            {{ section.settings.sub_heading }}
          </div>
          {% endif %}
          <div class="image-with-text-button mt-3">
            <a href="{{ section.settings.url }}" class="btn btn-primary">{{ section.settings.label }}</a>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
{% schema %}
{
  "name": "image-with-text",
  "settings": [
   
  ],
  "presets": [
    {
      "name": "image with text",
      "category": "Image"
    }
  ]
}
{% endschema %}
